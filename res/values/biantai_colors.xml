<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Color of the text for buttons in the action bar -->
    <!-- 操作栏中按键的文字颜色 -->
    <color name="action_bar_button_text_color">#FFFFFF</color>

    <!-- Softcode text colors from layouts to make them themable -->
    <!-- 将来自layouts中的字体颜色软编码, 以让他们可被主题使用 -->
    <color name="compose_message_edit_text">#ffffff</color>
    <color name="compose_message_text_counter">#cccccccc</color>
    <color name="actionbar_text">#ffffff</color>
    <color name="delete_thread_dialog">#ffffff</color>
    <color name="delivery_report_header">#ffffff</color>
    <color name="delivery_report_recipient">#ffffff</color>
    <color name="delivery_report_status">#ffffff</color>
    <color name="delivery_report_date">#ffffff</color>
    <color name="button_text">#ffffff</color>
    <color name="message_received">#ffffff</color>
    <color name="message_sent">#ffffff</color>
    <color name="widget_unread_text">#888888</color>
    <color name="widget_loading">#ffffff</color>

    <!-- Softcode background colors from layouts to make them themable -->
    <!-- 将来自layouts中的背景颜色软编码, 以让他们可被主题使用 -->
    <color name="background">#000000</color>
    <color name="darkgray_backgrounds">#777777</color>
    <color name="quickmessage_body_dark_bg">#ff1e1e1e</color>
    <color name="quickmessage_body_light_bg">#fff3f3f3</color>
    <color name="dividers">#111111</color>
    <color name="transparent">#00000000</color>
    <color name="date_view_background">#00000000</color>

    <!-- Softcode QuickMessage body text colors from layouts to make them themable -->
    <!-- 将来自layouts中的快捷短信正文字体颜色软编码, 以让他们可被主题使用 -->
    <color name="quickmessage_body_text_color_dark">#ffffffff</color>
    <color name="quickmessage_body_text_color_light">#ff000000</color>
    <color name="quickmessage_divider_dark">#ffffffff</color>
    <color name="quickmessage_divider_light">#ff33b5e5</color>

</resources>
